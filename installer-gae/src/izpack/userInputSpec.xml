<userInput>
    <!-- Install -->
    <panel order="0">
        <field type="title" txt="Google AppEngine Configuration" bold="true"
               size="1"/>
        <field type="divider" align="top"/>
        <field type="staticText" align="left" txt="AppEngine application id"/>
        <field type="text" align="left" variable="application.id">
            <spec txt="" size="25" set="jfspotcloud"/>
        </field>
        <field type="space"/>
        <field type="staticText" align="left" txt="Your Google loginname"/>
        <field type="text" align="left" variable="email">
            <spec txt="" size="25" set="slspeek"/>
        </field>
        <field type="space"/>
        <field type="staticText" align="left" txt="From address for mails send"/>
        <field type="text" align="left" variable="email.from.userinput">
            <spec txt="" size="25" set="slspeek@gmail.com"/>
        </field>
        <field type="space"/>
    </panel>
    <panel order="1">
        <field type="title" txt="Peer Configuration" bold="true" size="1"/>
        <field type="staticText" align="left"
               txt="Secret for the peer to server communication"/>
        <field type="text" align="left" variable="bot.secret.userinput">
            <spec txt="" size="25" set="SECRET"/>
        </field>
        <field type="space"/>
         <field type="staticText" align="left"
               txt="Use Shotwell"/>
        <field type="check" align="left" variable="shotwell.userinput">
            <spec txt="" true="true" false="false" set="true"/>
        </field>
        <field type="staticText" align="left" txt="Database to use:"/>
        <field type="file" align="left" variable="photos.db.userinput">
            <spec txt="" size="25" set="$USER_HOME/.local/share/shotwell/data/photo.db"/>
        </field>
        <field type="divider" align="bottom"/>
    </panel>
</userInput>