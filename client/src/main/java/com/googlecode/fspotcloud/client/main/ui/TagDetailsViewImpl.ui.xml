<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction"
        >
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.AdminResources" field="res"></ui:with>
    <g:HTMLPanel>
        <table>
            <theader>
                <tr>
                    <td colspan="2">
                        <g:Label styleName="{res.style.headerLabel}" ui:field="headerLabel">Label
                            details
                        </g:Label>
                    </td>
                </tr>
            </theader>
            <tbody>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Name</g:Label>
                    </td>
                    <td>
                        <g:Label styleName="{res.style.propertyValue}" ui:field="tagNameValueLabel"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Description</g:Label>
                    </td>
                    <td>
                        <g:Label styleName="{res.style.propertyValue}" ui:field="tagDescriptionValueLabel"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Import was requested</g:Label>
                    </td>
                    <td>
                        <g:Label styleName="{res.style.propertyValue}" ui:field="tagImportIssuedValueLabel"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Number of photos in this label</g:Label>
                    </td>
                    <td>
                        <g:Label styleName="{res.style.propertyNumberValue}" ui:field="tagCountValueLabel"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Number of photos loaded</g:Label>
                    </td>
                    <td>
                        <g:Label styleName="{res.style.propertyNumberValue}"
                                 ui:field="tagLoadedCountValueLabel"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Toggle import of this label</g:Label>
                    </td>
                    <td>
                        <ka:ActionButton ui:field="importTagButton">Import label</ka:ActionButton>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Approve groups</g:Label>
                    </td>
                    <td>
                        <ka:ActionButton ui:field="manageAccessButton">Manage access</ka:ActionButton>
                    </td>
                </tr>
            </tbody>
        </table>
    </g:HTMLPanel>
</ui:UiBinder> 