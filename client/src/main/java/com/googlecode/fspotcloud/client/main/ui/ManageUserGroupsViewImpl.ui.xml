<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction"
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui">

    <ui:with type="com.googlecode.fspotcloud.client.main.ui.AdminResources" field="res"></ui:with>
    <g:LayoutPanel styleName="{res.style.myUsergroups}">
        <g:layer top="5%" height="90%" left="5%" width="90%">
            <g:LayoutPanel styleName="{res.style.myUsergroups}">
                <g:layer top="0%" height="10%" left="0%" width="100%">
                    <g:HTMLPanel>
                        <div class="{res.style.titleLabel}">
                            Usergroup Management
                        </div>
                    </g:HTMLPanel>
                </g:layer>
                <g:layer top="8%" height="80%" left="0%" width="100%">
                    <g:LayoutPanel styleName="{res.style.propertyValue}">
                        <g:layer right="0%" width="100%" bottom="0%" height="100%"
                                 styleName="{res.style.tableLayoutLayer}">
                            <c:CellTable ui:field="table" styleName="{res.style.myUsergroupsTable}"></c:CellTable>
                        </g:layer>
                        <g:layer left="3px" right="3px" bottom="3px" height="22px">
                            <main:StatusViewImpl ui:field="statusView"></main:StatusViewImpl>
                        </g:layer>

                    </g:LayoutPanel>
                </g:layer>
                <g:layer bottom="5%" height="40px" left="0%" width="20%">
                    <ka:ActionButton ui:field="newButton"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="5%" height="40px" left="25%" width="10%">
                    <ka:ActionButton ui:field="editButton"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="5%" height="40px" left="40%" width="20%">
                    <ka:ActionButton ui:field="manageButton"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="5%" height="40px" left="65%" width="15%">
                    <ka:ActionButton ui:field="deleteButton"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="5%" height="60px" right="0%" width="15%">
                    <ka:ActionButton ui:field="dashboardButton"></ka:ActionButton>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 