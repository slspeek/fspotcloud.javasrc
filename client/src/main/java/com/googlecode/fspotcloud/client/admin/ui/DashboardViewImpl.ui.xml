<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui"
             xmlns:admin="urn:import:com.googlecode.fspotcloud.client.admin.ui">
    <ui:with type="com.googlecode.fspotcloud.client.admin.ui.AdminResources" field="res"></ui:with>
    <g:DockLayoutPanel unit='PX'>
        <g:north size="50">
            <g:Label styleName="{res.style.titleLabel}" ui:field="titleLabel" text="F-Spot Cloud Dashboard">
            </g:Label>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel styleName="{res.style.main}" ui:field="horizontalSplitPanel">
                <g:west size="250">
                    <main:TreeViewImpl styleName="{res.style.tree}"></main:TreeViewImpl>
                </g:west>
                <g:center>
                    <g:HorizontalPanel>
                        <admin:TagDetailsViewImpl styleName="{res.style.labelDetails}" width="400px" height="100%"></admin:TagDetailsViewImpl>
                        <admin:GlobalActionsViewImpl styleName="{res.style.globalActions}" ></admin:GlobalActionsViewImpl>
                    </g:HorizontalPanel>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
        <g:south size='70'>
            <g:LayoutPanel styleName="{res.style.footer}">
                <g:layer left="10%" width="20%" top="10%" height="37px">
                    <main:PushButtonExt ui:field="toPhotos" >To photos</main:PushButtonExt>
                </g:layer>
                <g:layer top="10%" width="25%" right="10%" height="37px">
                    <main:PushButtonExt ui:field="manageGroups">Manage usergroups</main:PushButtonExt>
                </g:layer>
                <g:layer bottom="0%" height="20px">
                    <g:HTML>
                        <div class="{res.style.copyleft}"><center>Copyleft 2010-2013 Steven L. Speek</center></div>
                    </g:HTML>
                </g:layer>
            </g:LayoutPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder> 