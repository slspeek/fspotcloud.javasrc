<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
    <ui:with type="com.googlecode.fspotcloud.client.admin.ui.AdminResources" field="res"></ui:with>
    <g:LayoutPanel styleName="{res.style.myUsergroups}">
        <g:layer top="0%" height="10%" left="20%" width="50%">
            <g:HTMLPanel>
                <div class="{res.style.editUsergroupHeader}">
                    Usergroup Management
                </div>
            </g:HTMLPanel>
        </g:layer>
        <g:layer top="8%" height="80%" left="20%" width="60%">
            <g:LayoutPanel styleName="{res.style.tableLayout}">
                <g:layer right="0%" width="100%" bottom="0%" height="100%" styleName="{res.style.tableLayoutLayer}">
                    <c:CellTable ui:field="table" styleName="{res.style.myUsergroupsTable}"></c:CellTable>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
        <g:layer bottom="5%" height="40px" left="20%" width="10%">
            <g:PushButton ui:field="newButton">New user group</g:PushButton>
        </g:layer>
        <g:layer bottom="5%" height="40px" left="35%" width="10%">
            <g:PushButton ui:field="editButton">Edit</g:PushButton>
        </g:layer>
        <g:layer bottom="5%" height="40px" left="50%" width="10%">
            <g:PushButton ui:field="manageButton">Manage users</g:PushButton>
        </g:layer>
        <g:layer bottom="5%" height="40px" left="65%" width="10%">
            <g:PushButton ui:field="deleteButton">Delete</g:PushButton>
        </g:layer>
        <g:layer bottom="5%" height="40px" left="80%" width="10%">
            <g:PushButton ui:field="dashboardButton">Dashboard</g:PushButton>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 