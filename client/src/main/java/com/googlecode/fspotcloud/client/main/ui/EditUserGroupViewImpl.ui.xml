<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction.gwt"
        >
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.AdminResources" field="res"></ui:with>
    <g:LayoutPanel styleName="{res.style.editUsergroup}">
        <g:layer top="5%" height="6%" left="10%" width="80%">
            <g:Label styleName="{res.style.titleLabel}">Edit user group</g:Label>
        </g:layer>
        <g:layer top="15%" height="5%" left="10%" width="30%">
            <g:Label styleName="{res.style.propertyLabel}">Name</g:Label>
        </g:layer>
        <g:layer top="15%" height="5%" left="40%" width="40%">
            <g:TextBox ui:field="nameTextBox" styleName="{res.style.propertyInput}"></g:TextBox>
        </g:layer>
        <g:layer top="25%" height="5%" left="10%" width="30%">
            <g:Label styleName="{res.style.propertyLabel}">Description</g:Label>
        </g:layer>
        <g:layer top="25%" height="5%" left="40%" width="40%">
            <g:TextBox ui:field="descriptionTextBox" styleName="{res.style.propertyInput}"></g:TextBox>
        </g:layer>
        <g:layer top="35%" height="5%" left="40%" width="40%">
            <g:CheckBox ui:field="publicCheckBox" styleName="{res.style.publicCheckbox}">Viewable for everybody
            </g:CheckBox>
        </g:layer>
        <g:layer top="45%" height="5%" left="10%" width="80%">
            <g:Label ui:field="statusLabel" styleName="{res.style.propertyValue}">Status</g:Label>
        </g:layer>
        <g:layer top="55%" height="5%" left="10%" width="10%">
            <ka:ActionButton ui:field="save">Save</ka:ActionButton>
        </g:layer>
        <g:layer top="55%" height="5%" right="10%" width="10%">
            <ka:ActionButton ui:field="cancel">Cancel</ka:ActionButton>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 