<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction"
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.AdminResources" field="res"></ui:with>
    <g:LayoutPanel styleName="{res.style.myUsergroups}">
        <g:layer top="5%" height="90%" left="5%" width="90%">
            <g:LayoutPanel styleName="{res.style.manageUsers}">
                <g:layer top="0%" height="10%" left="0%" width="50%">
                    <g:Label styleName="{res.style.titleLabel}">User Management for:</g:Label>
                </g:layer>
                <g:layer top="0%" height="10%" left="40%" width="30%">
                    <g:Label ui:field="userGroupName" styleName="{res.style.titleLabel}"></g:Label>
                </g:layer>
                <g:layer top="12%" height="70%" left="0%" width="85%">
                    <g:LayoutPanel styleName="{res.style.propertyValue}">
                        <g:layer top="0%" height="90%">
                            <c:CellTable ui:field="table" styleName="{res.style.myUsergroupsTable}"></c:CellTable>
                        </g:layer>
                        <g:layer bottom="0px" height="22px">
                            <main:StatusViewImpl ui:field="status"></main:StatusViewImpl>
                        </g:layer>
                    </g:LayoutPanel>
                </g:layer>
                <g:layer bottom="5%" height="40px" left="0%" width="20%">
                    <g:Label styleName="{res.style.propertyLabel}">Email of new group member</g:Label>
                </g:layer>
                <g:layer bottom="5%" height="40px" left="22%" width="20%">
                    <g:TextBox ui:field="emailTextBox" styleName="{res.style.propertyInput}"></g:TextBox>
                </g:layer>
                <g:layer bottom="5%" height="50px" left="42%" width="16%">
                    <ka:ActionButton ui:field="addButton"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="5%" height="50px" right="26%" width="17%">
                    <ka:ActionButton ui:field="removeButton"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="5%" height="50px" right="8%" width="20%">
                    <ka:ActionButton ui:field="myUsergroupsButton"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="5%" height="50px" right="0%" width="10%">
                    <ka:ActionButton ui:field="dashboardButton"></ka:ActionButton>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 