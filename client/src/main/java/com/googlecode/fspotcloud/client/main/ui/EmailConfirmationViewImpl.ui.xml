<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction" >
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.UserPagesResources" field="res"></ui:with>
    <g:LayoutPanel addStyleNames="{res.style.userPage}">
        <g:layer top="5%" height="90%" width="92%" left="4%">
            <g:LayoutPanel>
                <g:layer top="0%" height="14%" width="100%" left="0%">
                    <g:Label addStyleNames="{res.style.titleLabel}">F-Spot Cloud Email Confirmation</g:Label>
                </g:layer>
                <g:layer top="60%" height="8%" left="0%" width="100%">
                    <g:Label addStyleNames="{res.style.statusLabel}" ui:field="statusLabel"></g:Label>
                </g:layer>
                <g:layer bottom="0%" height="12%" left="0%" width="20%">
                    <ka:ActionToolbar></ka:ActionToolbar>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 