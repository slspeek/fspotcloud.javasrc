<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.UserPagesResources" field="res"></ui:with>
    <g:LayoutPanel addStyleNames="{res.style.userPage}">
        <g:layer top="5%" height="90%" width="92%" left="4%">
            <g:LayoutPanel>
                <g:layer top="0%" height="14%" width="100%" left="0%">
                    <g:Label addStyleNames="{res.style.titleLabel}">Request password reset</g:Label>
                </g:layer>
                <g:layer top="25%" height="13%" left="0%" width="30%">
                    <g:Label addStyleNames="{res.style.label}">Email</g:Label>
                </g:layer>
                <g:layer top="25%" height="13%" left="30%" width="70%">
                    <g:TextBox ui:field="emailTextBox" addStyleNames="{res.style.textBox}"></g:TextBox>
                </g:layer>
                <g:layer top="65%" height="8%" left="0%" width="100%">
                    <g:Label ui:field="statusLabel" addStyleNames="{res.style.statusLabel}">Fill in your email</g:Label>
                </g:layer>
                <g:layer top="75%" width="100%" height="12%">
                    <g:LayoutPanel>
                        <g:layer top="5%" height="90%" left="0%" width="20%">
                            <main:BigPushButton ui:field="send">Send</main:BigPushButton>
                        </g:layer>
                        <g:layer top="5%" height="90%" right="0%" width="20%">
                            <main:BigPushButton ui:field="cancel">Cancel</main:BigPushButton>
                        </g:layer>

                    </g:LayoutPanel>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>

</ui:UiBinder> 