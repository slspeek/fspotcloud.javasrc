<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction"
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.AdminResources" field="res"></ui:with>
    <g:LayoutPanel styleName="{res.style.myUsergroups}">
        <g:layer top="5%" height="90%" left="5%" width="90%">
            <g:LayoutPanel styleName="{res.style.myUsergroups}">
                <g:layer top="0%" height="10%" left="0%" width="50%">
                    <g:Label styleName="{res.style.titleLabel}">
                        Granting access to category:
                    </g:Label>
                </g:layer>
                <g:layer top="0%" height="10%" left="50%" width="50%">
                    <g:Label ui:field="tagName" styleName="{res.style.titleLabel}"></g:Label>
                </g:layer>
                <g:layer top="15%" height="75%" left="0%" width="48%">
                    <g:LayoutPanel styleName="{res.style.tableLayoutLayer}">
                        <g:layer height="10%" top="0%">
                            <g:HTMLPanel>
                                <div class="{res.style.propertyLabel}">
                                    Granted groups
                                </div>
                            </g:HTMLPanel>
                        </g:layer>
                        <g:layer top="10%" height="80%">
                            <c:CellTable ui:field="grantedTable"
                                         styleName="{res.style.myUsergroupsTable}"></c:CellTable>
                        </g:layer>
                        <g:layer bottom="40px" height="50px" left="0%" width="35%">
                            <ka:ActionButton ui:field="revokeButton"></ka:ActionButton>
                        </g:layer>
                    </g:LayoutPanel>
                </g:layer>
                <g:layer top="15%" height="75%" right="0%" width="48%">
                    <g:LayoutPanel styleName="{res.style.tableLayoutLayer}">
                        <g:layer height="10%" top="0%" right="0%" width="100%">
                            <g:HTMLPanel>
                                <div class="{res.style.propertyLabel}">
                                    Candidates for granting
                                </div>
                            </g:HTMLPanel>
                        </g:layer>
                        <g:layer top="10%" height="80%">
                            <c:CellTable ui:field="revokedTable"
                                         styleName="{res.style.myUsergroupsTable}"></c:CellTable>
                        </g:layer>
                        <g:layer bottom="40px" height="50px" left="0%" width="35%">
                            <ka:ActionButton ui:field="grantButton"></ka:ActionButton>
                        </g:layer>

                    </g:LayoutPanel>
                </g:layer>
                <g:layer bottom="90px" height="22px">
                    <main:StatusViewImpl ui:field="statusView"></main:StatusViewImpl>
                </g:layer>
                <g:layer bottom="0%" height="60px" left="0%" width="25%">
                    <ka:ActionButton ui:field="dashboardButton"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="0%" height="40px" left="30%" width="25%">
                    <ka:ActionButton ui:field="manageGroupsButton"></ka:ActionButton>
                </g:layer>

            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 