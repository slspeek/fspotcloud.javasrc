<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.UserPagesResources" field="res"></ui:with>
    <g:LayoutPanel addStyleNames="{res.style.userPage}">
        <g:layer top="5%" height="90%" width="92%" left="4%">
            <g:LayoutPanel>
                <g:layer top="0%" height="14%" width="100%" left="0%">
                    <g:Label addStyleNames="{res.style.titleLabel}">F-Spot Cloud Native Login</g:Label>
                </g:layer>
                <g:layer top="17%" height="13%" left="0%" width="30%">
                    <g:Label addStyleNames="{res.style.label}">Email</g:Label>
                </g:layer>
                <g:layer top="17%" height="13%" left="30%" width="70%">
                    <g:TextBox ui:field="userNameTextBox" addStyleNames="{res.style.textBox}"></g:TextBox>
                </g:layer>
                <g:layer top="33%" height="13%" left="0%" width="30%">
                    <g:Label addStyleNames="{res.style.label}">Password</g:Label>
                </g:layer>
                <g:layer top="33%" height="13%" left="30%" width="70%">
                    <g:PasswordTextBox ui:field="passwordTextBox"
                                       addStyleNames="{res.style.textBox}"></g:PasswordTextBox>
                </g:layer>
                <g:layer top="49%" height="8%" left="0%" width="100%">
                    <g:Label ui:field="statusLabel" addStyleNames="{res.style.statusLabel}">Please login</g:Label>
                </g:layer>
                <g:layer top="60%" width="100%" height="10%">
                    <g:LayoutPanel>
                        <g:layer top="5%" height="90%" left="0%" width="19%">
                            <ka:ActionButton ui:field="login">Login</ka:ActionButton>
                        </g:layer>
                        <g:layer top="5%" height="90%" left="39%" width="23%">
                            <ka:ActionButton ui:field="signUp"></ka:ActionButton>
                        </g:layer>
                        <g:layer top="5%" height="90%" right="0%" width="22%">
                            <ka:ActionButton ui:field="cancel">Cancel</ka:ActionButton>
                        </g:layer>
                    </g:LayoutPanel>
                </g:layer>
                <g:layer top="73%" width="100%" height="10%">
                    <g:LayoutPanel>
                        <g:layer top="5%" height="90%" left="0%" width="50%">
                            <ka:ActionButton ui:field="resend"></ka:ActionButton>
                        </g:layer>
                        <g:layer top="5%" height="90%" right="0%" width="40%">
                            <ka:ActionButton ui:field="passwordReset"></ka:ActionButton>
                        </g:layer>
                    </g:LayoutPanel>
                </g:layer>
                <g:layer bottom="0%" height="10%" left="0%" width="100%">
                    <ka:ActionButton ui:field="otherLogin"></ka:ActionButton>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>

</ui:UiBinder> 