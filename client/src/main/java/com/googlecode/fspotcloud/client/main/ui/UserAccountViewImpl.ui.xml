<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.UserPagesResources" field="res"></ui:with>
    <g:LayoutPanel styleName="{res.style.userPage}">
        <g:layer top="1%" height="49%" width="92%" left="4%">
            <g:LayoutPanel>
                <g:layer top="0%" height="16%" width="100%" left="0%">
                    <g:Label addStyleNames="{res.style.titleLabel}">User profile</g:Label>
                </g:layer>
                <g:layer top="17%" height="15%" left="0%" width="30%">
                    <g:Label addStyleNames="{res.style.label}">Email</g:Label>
                </g:layer>
                <g:layer top="17%" height="15%" left="45%" width="40%">
                    <g:Label ui:field="emailValueLabel"></g:Label>
                </g:layer>
                <g:layer top="35%" height="15%" left="0%" width="30%">
                    <g:Label addStyleNames="{res.style.label}">Last login</g:Label>
                </g:layer>
                <g:layer top="35%" height="15%" left="45%" width="40%">
                    <g:Label ui:field="lastLoginValueLabel"></g:Label>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
        <g:layer bottom="1%" height="49%" width="92%" left="4%">
            <g:LayoutPanel>
                <g:layer top="0%" height="15%" left="0%" width="45%">
                    <g:Label addStyleNames="{res.style.label}">Old Password</g:Label>
                </g:layer>
                <g:layer top="0%" height="15%" left="45%" width="55%">
                    <g:PasswordTextBox addStyleNames="{res.style.textBox}"
                                       ui:field="oldPasswordTextBox"></g:PasswordTextBox>
                </g:layer>
                <g:layer top="16%" height="15%" left="0%" width="45%">
                    <g:Label addStyleNames="{res.style.label}">New Password</g:Label>
                </g:layer>
                <g:layer top="16%" height="15%" left="45%" width="55%">
                    <g:PasswordTextBox addStyleNames="{res.style.textBox}"
                                       ui:field="passwordTextBox"></g:PasswordTextBox>
                </g:layer>
                <g:layer top="32%" height="15%" left="0%" width="45%">
                    <g:Label addStyleNames="{res.style.label}">New Password again</g:Label>
                </g:layer>
                <g:layer top="32%" height="15%" left="45%" width="55%">
                    <g:PasswordTextBox addStyleNames="{res.style.textBox}"
                                       ui:field="passwordAgainTextBox"></g:PasswordTextBox>
                </g:layer>
                <g:layer top="60%" height="15%" left="0%" width="100%">
                    <g:Label addStyleNames="{res.style.statusLabel}" ui:field="statusLabel">Please fill in the fields
                    </g:Label>
                </g:layer>
                <g:layer bottom="0%" height="16%" left="0%" width="40%">
                    <main:BigPushButton ui:field="save">Change password</main:BigPushButton>
                </g:layer>
                <g:layer bottom="0%" height="16%" right="0%" width="35%">
                    <main:BigPushButton ui:field="cancel">Main Page</main:BigPushButton>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 