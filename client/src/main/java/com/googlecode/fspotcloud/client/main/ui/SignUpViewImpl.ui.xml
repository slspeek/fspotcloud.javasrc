<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.UserPagesResources" field="res"></ui:with>
    <g:LayoutPanel addStyleNames="{res.style.userPage}">
        <g:layer top="5%" height="90%" width="92%" left="4%">
            <g:LayoutPanel>
                <g:layer top="0%" height="14%" width="100%" left="0%">
                    <g:Label addStyleNames="{res.style.titleLabel}">F-Spot Cloud Native Sign Up</g:Label>
                </g:layer>
                <g:layer top="15%" height="12%" left="0%" width="30%">
                    <g:Label addStyleNames="{res.style.label}">Email</g:Label>
                </g:layer>
                <g:layer top="15%" height="12%" left="30%" width="70%">
                    <g:TextBox addStyleNames="{res.style.textBox}" ui:field="emailTextBox"></g:TextBox>
                </g:layer>
                <g:layer top="30%" height="12%" left="0%" width="30%">
                    <g:Label addStyleNames="{res.style.label}">Password</g:Label>
                </g:layer>
                <g:layer top="30%" height="12%" left="30%" width="70%">
                    <g:PasswordTextBox addStyleNames="{res.style.textBox}"
                                       ui:field="passwordTextBox"></g:PasswordTextBox>
                </g:layer>
                <g:layer top="45%" height="12%" left="0%" width="30%">
                    <g:Label addStyleNames="{res.style.label}">Password again</g:Label>
                </g:layer>
                <g:layer top="45%" height="12%" left="30%" width="70%">
                    <g:PasswordTextBox addStyleNames="{res.style.textBox}"
                                       ui:field="passwordAgainTextBox"></g:PasswordTextBox>
                </g:layer>
                <g:layer top="60%" height="8%" left="0%" width="100%">
                    <g:Label addStyleNames="{res.style.statusLabel}" ui:field="statusLabel">Please fill in the fields
                    </g:Label>
                </g:layer>
                <g:layer bottom="0%" height="12%" left="0%" width="20%">
                    <g:PushButton ui:field="signUp" addStyleNames="{res.style.button}">SignUp</g:PushButton>
                </g:layer>
                <g:layer bottom="0%" height="12%" right="0%" width="20%">
                    <g:PushButton ui:field="cancel" addStyleNames="{res.style.button}">Cancel</g:PushButton>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 