<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction"
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.UserPagesResources" field="res"></ui:with>
    <g:LayoutPanel addStyleNames="{res.style.userPage}">
        <g:layer top="1%" height="98%" width="96%" left="2%">
            <g:LayoutPanel>
                <g:layer top="0%" height="10%" width="100%" left="0%">
                    <g:Label addStyleNames="{res.style.titleLabel}">Mail full-size image</g:Label>
                </g:layer>
                <g:layer top="11%" height="70%" width="100%" left="0%">
                     <main:ImageViewImpl></main:ImageViewImpl>
                </g:layer>
                <g:layer top="82%" height="8%" left="0%" width="100%">
                    <g:Label addStyleNames="{res.style.statusLabel}" ui:field="statusLabel">Do you want this image mailed to you?</g:Label>
                </g:layer>
                <g:layer bottom="0%" height="9%" left="0%" width="30%">
                    <g:PushButton ui:field="mail" addStyleNames="{res.style.button}">Mail image</g:PushButton>
                </g:layer>
                <g:layer bottom="0%" height="9%" right="0%" width="30%">
                    <g:PushButton ui:field="cancel" addStyleNames="{res.style.button}">Cancel</g:PushButton>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 