<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui">
    <ui:with type="com.googlecode.fspotcloud.client.admin.ui.AdminResources" field="res"></ui:with>
    <g:HTMLPanel>
        <table style="{res.style.labelDetails}">
            <theader>
                <tr>
                    <td colspan="2">
                        <g:Label styleName="{res.style.headerLabel}" ui:field="headerLabel">Instance information</g:Label>
                    </td>
                </tr>
            </theader>
            <tbody>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Date we last saw the peer</g:Label>
                    </td>
                    <td>
                        <g:Label styleName="{res.style.propertyValue}" ui:field="lastSeenPeerValueLabel"></g:Label>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Synchronize with peer</g:Label>
                    </td>
                    <td>
                        <main:PushButtonExt ui:field="updateButton">Synchronize</main:PushButtonExt>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Number of photos on the peer</g:Label>
                    </td>
                    <td>
                        <g:Label ui:field="peerPhotoCountValueLabel" styleName="{res.style.propertyNumberValue}"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Tag count on peer</g:Label>
                    </td>
                    <td>
                        <g:Label styleName="{res.style.propertyNumberValue}" ui:field="tagCountOnPeerValueLabel"></g:Label>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Number of commands pending</g:Label>
                    </td>
                    <td>
                        <g:Label ui:field="pendingCommandCountValueLabel" styleName="{res.style.propertyNumberValue}"></g:Label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Delete all pending commands</g:Label>
                    </td>
                    <td>
                        <main:PushButtonExt ui:field="deleteAllCommandsButton">Clear queue</main:PushButtonExt>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label styleName="{res.style.propertyLabel}">Remove all imported data</g:Label>
                    </td>
                    <td>
                        <main:PushButtonExt ui:field="deleteAllTagsButton">Remove all</main:PushButtonExt>
                    </td>
                </tr>

            </tbody>
        </table>
    </g:HTMLPanel>
</ui:UiBinder> 