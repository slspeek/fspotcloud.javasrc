<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:main="urn:import:com.googlecode.fspotcloud.client.main.ui"
             xmlns:ka="urn:import:com.googlecode.fspotcloud.keyboardaction">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.AdminResources" field="res"></ui:with>
    <g:DockLayoutPanel unit='PX'>
        <g:north size="50">
            <g:Label styleName="{res.style.titleLabel}" ui:field="titleLabel" text="F-Spot Cloud Dashboard">
            </g:Label>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel styleName="{res.style.main}" ui:field="horizontalSplitPanel">
                <g:west size="250">
                    <main:TreeViewImpl styleName="{res.style.tree}"></main:TreeViewImpl>
                </g:west>
                <g:center>
                    <g:LayoutPanel>
                        <g:layer left="0%" width="50%">
                            <main:TagDetailsViewImpl styleName="{res.style.labelDetails}" width="400px"
                                                     height="100%"></main:TagDetailsViewImpl>
                        </g:layer>
                        <g:layer right="0%" width="50%">
                            <main:GlobalActionsViewImpl
                                    styleName="{res.style.globalActions}"></main:GlobalActionsViewImpl>
                        </g:layer>
                    </g:LayoutPanel>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
        <g:south size='70'>
            <g:LayoutPanel styleName="{res.style.footer}">
                <g:layer left="10%" width="20%" top="10%" height="43px">
                    <ka:ActionButton ui:field="reloadTree"></ka:ActionButton>
                </g:layer>
                <g:layer left="40%" width="20%" top="10%" height="43px">
                    <ka:ActionButton ui:field="toPhotos"></ka:ActionButton>
                </g:layer>
                <g:layer top="10%" width="25%" right="10%" height="43px">
                    <ka:ActionButton ui:field="manageGroups"></ka:ActionButton>
                </g:layer>
                <g:layer bottom="0%" height="20px">
                    <g:HTML>
                        <div class="{res.style.copyleft}">
                            <center>Copyleft 2010-2013 Steven L. Speek</center>
                        </div>
                    </g:HTML>
                </g:layer>
            </g:LayoutPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder> 