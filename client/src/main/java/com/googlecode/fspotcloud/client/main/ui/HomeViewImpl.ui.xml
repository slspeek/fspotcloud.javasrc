<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with type="com.googlecode.fspotcloud.client.main.ui.HomeResources" field="res"></ui:with>
    <g:LayoutPanel styleName="{res.style.page}">
        <g:layer top="10%" height="12%" left="22%" width="78%">
            <g:Label styleName="{res.style.welcome}">Welcome to F-Spot Cloud</g:Label>
        </g:layer>
        <g:layer top="23%" height="12%" left="22%" width="78%">
            <g:Label ui:field="statusLabel" styleName="{res.style.waiting}">Waiting for the server to wake up ...
            </g:Label>
        </g:layer>
        <g:layer top="30%" height="60%" left="22%" width="60%">
            <g:Image resource="{res.welcomeIcon}"></g:Image>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>
